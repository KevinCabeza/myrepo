EJERCICIO EXAMEN AÑO ANTERIOR 


create database Examen;
use Examen;
create table Usuario {
id INTERGER AUTO_INCREMENT,
nombre VARCHAR(30)NOT NULL,
edad INT,
tutor INT,
insignia INT,
CONSTRAINT PK_Usuario PRIMARY KEY (id),
CONSTRAINT UQ_Usuario_Nombre UNIQUE KEY (nombre),
CONSTRAIN FK_Usuario_Tutor FOREIGN KEY (tutor),
REFERENCES Usuario (id),
CONSTRAINT FK_Usuario_Insignia FOREIGN KEY (insignia),
REFERENCES Insugnia (id)












